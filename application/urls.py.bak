from __future__ import absolute_import
from django.conf.urls import url,include
from django.contrib import admin
from core.views import Main_page, RegisterFormView
from django.contrib.auth.views import LoginView
from django.conf import settings
from django.contrib.auth.views import logout


urlpatterns = [

    url(ur'^register/$', RegisterFormView.as_view(),name = u'register'),
    url(ur'^login/$', LoginView.as_view(template_name = u'core/login.html'),name = u'login'),
    url(ur'^logout/$', logout, {u'next_page': settings.LOGOUT_REDIRECT_URL}, name=u'logout'),
    url(ur'^$', Main_page.as_view(),name = u'main'),
    url(ur'^admin/', admin.site.urls),
    url(ur'^blog/', include(u'blog.urls', namespace=u'blogs')),
    url(ur'^post/', include(u'post.urls', namespace=u'posts')),
    url(ur'^category/', include(u'category.urls', namespace=u'categories')),
]




